<html>
<head>



	<title>Your Chat</title>
	<meta charset="utf-8">
	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="js/bootstrap.js"></script>
	<script src="js/bootstrap.min.js>"></script>
	<script src="js/chat.js"></script>
	<link rel="stylesheet" type="text/css" href="css/bootstrap-theme.css">
	<link rel="stylesheet" type="text/css" href="css/bootstrap-theme.min.css">
	<link rel="stylesheet" type="text/css" href="css/bootstrap.css">
	<link rel="stylesheet" type="text/css" href="css/bootstrap.min.css">
	<link rel="stylesheet" type="text/css" href="css/messageBoard.css">
</head>
<body>
	<div class="container">


		<!-- header -->
		<div class="skinnyJumbotron">
			<div style="align-items:left">
				<a href="/">
					<button type="button" class="btn btn-default btn-sm">
						Back to Contacts
					</button>
				</a>
				<h3 id="nameHeading">Message History</h3>
			</div>
			<hr>
		</div>
		<hr>
		<!-- chat template -->
		<div class="container" id="messageChain">
			{{#each messages}}
				<div class="text">
					<h3>{{text}}</h3>
					<p style="color:red">{{time}}</p>
					<hr>
				</div>
			{{/each}}
		</div>


		<!-- Text message box -->
		<div>
  			<input id="usermsg" type="text" name="userMessage" style="border:solid">
  			<!-- <input type="submit" onclick="addMessage()" value="Send"> -->
			<button id = "userSub" type="button" name="button" class="btn btn-primary">Send</button>
			<hr>
		</div>


		<!-- Suggestions -->
		<div class="container">
			<div class="row">
				<div class="col-sm-12">
					<h4 style="float:left;">Conversation Starters</h4>
				</div>
			</div>
			<hr>
			<div class="row">
			  <div class="col-sm-4" id="firstSuggestion">
			    <div class="card" id="card1">
			      <div class="card-body">
			        <h5 class="card-title">1) Zion Williamson Sprains Knee</h5>
			        <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
			        <a href="#" id="suggest1" class="btn btn-primary">Send Link</a>
			      </div>
			    </div>
			  </div>
			  <div class="col-sm-4">
			    <div class="card" id="card2">
			      <div class="card-body">
			        <h5 class="card-title">2) Boeheim Hit 'n' Run</h5>
			        <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
			        <a href="#" id="suggest2" class="btn btn-primary">Send Link</a>
			      </div>
			    </div>
			  </div>
			  <div class="col-sm-4">
			    <div class="card" id="card3">
			      <div class="card-body">
			        <h5 class="card-title">3) March Madness Preview</h5>
			        <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
			        <a href="#" id="suggest3" class="btn btn-primary">Send Link</a>
			      </div>
			    </div>
			  </div>
			</div>
			<hr>
		</div>

</body>

</html>
